<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/rental_website_sale/static/src/scss/website_sale.scss" />
        </xpath>
    </template>

    <template id="product" inherit_id="website_sale.product" customize_show="True" name="Product">
        <xpath expr="//a[@id='add_to_cart']" position="attributes">
            <attribute name="class">hide_oe_website_element</attribute>
        </xpath>
        <xpath expr="//div[@id='product_details']" position="inside">
                <div>
                    <div t-if="combination_info['instance_condition_hour']">
                        <div class="col-md-8 float_left not_padding_left info_title">
                            <span>Condition Hour:</span>
                        </div>
                        <div class="col-md-4 float_left">
                            <span t-esc="combination_info['instance_condition_hour']" />
                        </div>
                    </div>
                    <div t-if="combination_info['product_identification_number']">
                        <div class="col-md-8 float_left not_padding_left info_title">
                            <span>Product Identification Number:</span>
                        </div>
                        <div class="col-md-4 float_left ">
                            <span t-esc="combination_info['product_identification_number']" />
                        </div>
                    </div>
                    <div t-if="combination_info['vehicle_number']">
                        <div class="col-md-8 float_left not_padding_left info_title">
                            <span>Vehicle Number:</span>
                        </div>
                        <div class="col-md-4 float_left ">
                            <span t-esc="combination_info['vehicle_number']" />
                        </div>
                    </div>
                    <div t-if="combination_info['init_regist']">
                        <div class="col-md-8 float_left not_padding_left info_title">
                            <span>Initial Registration:</span>
                        </div>
                        <div class="col-md-4 float_left">
                            <span t-esc="combination_info['init_regist']" />
                        </div>
                    </div>
                    <div t-if="combination_info['instance_serial_number_id']">
                        <div class="col-md-8 float_left not_padding_left info_title">
                            <span>Serial Number:</span>
                        </div>
                        <div class="col-md-4 float_left">
                            <span t-esc="combination_info['instance_serial_number_id']" />
                        </div>
                    </div>
                    <div t-if="combination_info['manu_year']">
                        <div class="col-md-8 float_left not_padding_left info_title">
                            <span>Manufacture Year:</span>
                        </div>
                        <div class="col-md-4 float_left">
                            <span t-esc="combination_info['manu_year']" />
                        </div>
                    </div>
                </div>
                 <div>
                    <div>
                        <div class="col-md-12 float_left not_padding_left info_title" style="margin-top: 10px;">
                            <h5>CONTACT</h5>
                        </div>
                    </div>
                    <div t-if="combination_info['contact_name']">
                        <div class="col-md-6 float_left not_padding_left info_title">
                            <span>Contact Person:</span>
                        </div>
                        <div class="col-md-6 float_left ">
                            <span t-esc="combination_info['contact_name']" />
                        </div>
                    </div>
                    <div t-if="combination_info['contact_email']">
                        <div class="col-md-6 float_left not_padding_left info_title">
                            <span>Contact Email:</span>
                        </div>
                        <div class="col-md-6 float_left ">
                            <span t-esc="combination_info['contact_email']" />
                        </div>
                    </div>
                    <div t-if="combination_info['contact_phone']">
                        <div class="col-md-6 float_left not_padding_left info_title">
                            <span>Contact Phone:</span>
                        </div>
                        <div class="col-md-6 float_left">
                            <span t-esc="combination_info['contact_phone']" />
                        </div>
                    </div>
                </div>
        </xpath>
    </template>

    <template id="product_quantity" inherit_id="website_sale.product_quantity" name="Select Quantity">
        <xpath expr="//div[hasclass('css_quantity')]" position="attributes">
            <attribute name="class">hide_oe_website_element</attribute>
        </xpath>
    </template>
</odoo>
