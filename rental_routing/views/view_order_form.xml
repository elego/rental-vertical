<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                    <field name="rental" invisible="1"/>
                    <button name="%(rental_routing.action_sale_rental_route)d" string="Route" type="action" attrs="{'invisible': [('rental','=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                    <field name="can_forward_rental"
                           attrs="{'invisible': ['|', ('rental_type', '!=', 'new_rental'),
                                                      ('rental', '=', False)],
                                   'readonly': [('state', 'not in', ('draft', 'sent'))]}"/>
                    <field name="forward_rental_id"
                           attrs="{'invisible': [('can_forward_rental', '=', False)],
                                   'readonly': [('state', 'not in', ('draft', 'sent'))]}"
                           options="{'no_open': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
